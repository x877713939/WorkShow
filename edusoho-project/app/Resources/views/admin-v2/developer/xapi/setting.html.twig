{% extends 'admin-v2/layout.html.twig' %}

{% set menu = 'admin_v2_xapi_setting' %}

{% block main %}
  {{ web_macro.flash_messages() }}
  <form action="{{ path('admin_v2_xapi_setting') }}" method="post" id="xapi-setting-form" class="form-horizontal">
    <div class="row form-group">
      <div class="col-md-2 control-label">
        <label for="enabled">{{ 'admin.xapi.enable_label'|trans }}</label>
      </div>
      <div class="controls col-md-7 radios">
        {{ radios('enabled', {1 : 'form.radio_btn.open'|trans, 0 : 'form.radio_btn.close'|trans}, xapiSetting.enabled|default(0)) }}
      </div>
    </div>
    <div class="row form-group">
      <div class="col-md-2 control-label">
        <label for="push_url">{{ 'admin.xapi.push_url_label'|trans }}</label>
      </div>
      <div class="spinner col-md-7 controls">
        <input type="text" id="push_url" name="push_url" class="form-control" value="{{ xapiSetting.push_url|default('') }}">
      </div>
    </div>
    <div class="row">
      <div class="col-md-offset-2 col-md-7">
        <p class="text-muted">{{ 'admin.xapi.default_url'|trans }}</p>
      </div>
    </div>
    <div class="row form-group">
      <div class="col-md-2 control-label"></div>
      <div class="controls col-md-8">
        <button type="submit" class="btn btn-primary">{{ 'form.btn.save'|trans }}</button>
      </div>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
  </form>

{% endblock %}
