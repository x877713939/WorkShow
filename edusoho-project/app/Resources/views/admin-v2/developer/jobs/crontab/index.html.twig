{% extends 'admin-v2/layout.html.twig' %}

{% set menu = 'admin_v2_crontab' %}

{% set script_controller='crontab/index' %}

{% block main %}
  <table id="crontab-table" class="table table-striped table-hover">
    <thead>
    <tr>
      <th>{{'admin.crontab_job.command_label'|trans}}</th>
      <th>{{'admin.crontab_job.status_label'|trans}}</th>
    </tr>
    </thead>
    <tbody>
    {% for crontabJob in crontabJobs %}
      <tr>

        <td>
          {{ crontabJob.formatCrontabLine() }}
        </td>

        <td>
          {% if crontabJob.enabled %}
            {{ 'admin.crontab_job.enabled_label'|trans }}
          {% else %}
            {{ 'admin.crontab_job.disabled_label'|trans }}
          {% endif %}
        </td>

      </tr>
    {% endfor %}
    </tbody>

  </table>
  <div class="empty"><a href="javascript:" class="js-restore-btn" data-url="{{ path('admin_v2_crontab_resotre') }}">{{ 'admin.crontab_job.resotre_btn'|trans }}</a></div>

{% endblock %}