{% extends 'old-bootstrap-modal-layout.html.twig' %}

{% block title %}{{ 'admin.edu_cloud.edu_video.check.title'|trans }}{% endblock %}
{% block body %}
  <div class="table-responsive">

    <div class="tab-content">
      <div class="tab-pane fade active in" id="detail">
        <table class="table cd-table table-striped order-detail-table">
          <tr>
            <td width="25%">{{ 'admin.edu_cloud.edu_video.check.storage'|trans }}</td>
            <td width="75%">{{ renewVideo.freeSpace|default('') }}    {{ 'admin.edu_cloud.edu_video.check.storage.unit'|trans }}</td>
          </tr>
        </table>
      </div>
    </div>

    <div class="tab-content">
      <div class="tab-pane fade active in" id="detail">
        <table class="table cd-table table-striped order-detail-table">
          <tr>
            <td width="25%">{{ 'admin.edu_cloud.edu_video.check.flow'|trans }}</td>
            <td width="75%">{{ renewVideo.freeTransfer|default('') }}    {{ 'admin.edu_cloud.edu_video.check.flow.unit'|trans }}</td>
          </tr>
        </table>
      </div>
    </div>

    <div class="tab-content">
      <div class="tab-pane fade active in" id="detail">
        <table class="table cd-table table-striped order-detail-table">
          <tr>
            <td width="25%">{{ 'admin.edu_cloud.edu_video.check.service_life'|trans }}</td>
            <td width="75%">{{renewVideo.startDate|default('')}} ~ {{renewVideo.endDate|default('')}}</td>
          </tr>
        </table>
      </div>
    </div>

  </div>
{% endblock %}
