<div id="category-set-modal" class="modal cd-modal in js-category-modal" aria-hidden="true">
  <div class="modal-dialog cd-modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
          <i class="cd-icon cd-icon-close"></i>
        </button>
        <h4 class="modal-title">{{'my.teaching.question_bank.question_batch_category.title'|trans}}</h4>
      </div>
      <div class="modal-body">
        <div class="subject-state-form">
          <form class="form-horizontal js-category-form">
            <div class="form-group cd-mb24">
              <label class="col-md-3 control-label subject-state-form__label" for="categoryId">
                {{ 'admin.question_bank.manage.category_label'|trans }}
              </label>
              <div class="col-md-9 controls pl0">
                <select id="question_categoryId" name="categoryId" required="required" class="form-control width-input width-input-large">
                  <option value="0">{{'admin.question_bank.manage.category'|trans}}</option>
                  <option value="0">{{'site.data.empty'|trans}}</option>
                  {% for tree in categoryTreeArray %}
                    <option value={{ tree.id }}>{% for i in 1..(tree.depth-1) if tree.depth > 1 %}ã€€{% endfor %}{{ tree.name }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>
          </form>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="cd-btn cd-btn-link-default" data-dismiss="modal">{{ 'form.btn.cancel'|trans }}</button>
        <button type="button" class="cd-btn cd-btn-primary js-category-btn" data-url="{{ path('question_bank_manage_question_set_category', {id: questionBank.id}) }}" data-loading-text="{{'form.btn.hand_in.submiting'|trans}}..">{{'form.btn.confirm'|trans}}</button>
      </div>
    </div>
  </div>
</div>