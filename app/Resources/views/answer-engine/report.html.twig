{% extends 'layout.html.twig' %}

{% set lang = app.request.getLocale() %}

{% if lang == 'en' %}
  {% do script(['libs/vue.js','libs/item-bank/lib/itemBank.umd.min.js', 'libs/item-bank/lib/locale/en-US.js', 'app/js/answer-engine/report/index.js']) %}
{% else %}
  {% do script(['libs/vue.js','libs/item-bank/lib/itemBank.umd.min.js','app/js/answer-engine/report/index.js']) %}
{% endif %}

{% block body %}
  <style>
    html, body {
      height: 100%;
      overflow: auto;
      -webkit-overflow-scrolling: touch;
    }  
  </style>
{% include 'answer-engine/common.html.twig' %}
{% include 'attachment-upload/upload-data.html.twig' %}
<input type="hidden" name="assessment" value='{{ assessment|json_encode }}'>
<input type="hidden" name="answer_record" value='{{ answerRecord|json_encode }}'>
<input type="hidden" name="answer_scene" value='{{ answerScene|json_encode }}'>
<input type="hidden" name="answer_report" value='{{ answerReport|json_encode }}'>
<input type="hidden" name="question_favorites" value='{{ questionFavorites|json_encode }}'>
<input type="hidden" name="restart_url" value='{{ restartUrl }}'>
<input type="hidden" name="answer_show" value='{{ answerShow }}'>
{% endblock %}