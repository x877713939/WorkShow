{% extends 'admin/layout.html.twig' %}

{% set menu = 'admin_job_logs' %}

{% block main %}

    {% if logs %}
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>{{'admin.crontab_job.time'|trans}}</th>
                <th>{{'admin.crontab_job.name'|trans}}</th>
                <th>{{'admin.crontab_job.resource'|trans}}</th>
                <th>{{'admin.crontab_job.status'|trans}}</th>
            </tr>
            </thead>
            <tbody>
            {% for log in logs %}
                {% include 'admin/jobs/log-tr.html.twig' with {log:log} %}
            {% endfor %}
            </tbody>

        </table>
    {% else %}
        <div class="empty">{{'admin.crontab_job.empty_hint'|trans}}</div>
    {% endif %}
    {{ admin_macro.paginator(paginator) }}

{% endblock %}