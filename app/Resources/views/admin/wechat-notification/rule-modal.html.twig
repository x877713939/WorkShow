{% extends 'old-bootstrap-modal-layout.html.twig' %}
{% block title %}{{'wechat.notification.template_detail'|trans}}{% endblock %}

{% block body %}
  {% if key == 'vipExpired' and not is_plugin_installed('Vip') %}
  <div class="form-group">
    <div class="alert alert-warning">
      {{ 'wechat.notification.template.vip_is_not_install'|trans }}
    </div>
  </div>
  {% endif %}
  <div class="form-group">
    <div class="col-sm-2 control-label"><label>{{'wechat.notification.homework_or_testpaper_setting_conditions_label'|trans}}</label></div>
    {% if is_plugin_installed('Vip') %}{% set path = path('admin_vip_setting') %}{% else %}{% set path = path('admin_app_center') %}{% endif %}
      <div class="col-sm-10 controls">{{ template.rule|trans({'%url%': path()})|raw }}</div>
  </div>
{% endblock %}