{% extends 'admin-v2/layout.html.twig' %}

{% set menu = 'admin_v2_products_version_tab' %}

{% set script_controller = 'content-resource/product-version/version-list' %}

{% block main %}
  <form id="user-search-form" class="form-inline well well-sm" action="" method="get" novalidate>
    <div class="mbm">
      <div class="form-group">
        <label class="ptm">{{ 'merchant.content_resource.product_change_publish_time'|trans }}:</label>
        <input class="form-control" type="text" id="startDate" name="startDateTime" value="{{ request.get('startDateTime') }}"
               placeholder="{{ 'form.placeholder.start_date'|trans }}" autocomplete="off">
        -
        <input class="form-control mrm" type="text" id="endDate" name="endDateTime" value="{{ request.get('endDateTime') }}"
               placeholder="{{ 'form.placeholder.end_date'|trans }}" autocomplete="off">
      </div>
      <div class="form-group">
          <label class="ptm">{{ 'merchant.content_resource.product_title'|trans }}:</label>
          <input class="form-control" type="text" name="title" value="{{ request.get('title') }}" placeholder="{{ 'explore.course.search.placeholer'|trans }}">

        <button class="btn btn-primary">{{ 'form.btn.search'|trans }}</button>
      </div>
    </div>
  </form>
  {% include 'admin-v2/cloud-center/content-resource/product-version/list-tr.html.twig' %}
{% endblock %}
