{% extends 'old-bootstrap-modal-layout.html.twig' %}

{% import "macro.html.twig" as web_macro %}

{% block title %}
    {{ 'admin.crontab_job.log_title'|trans }}
{% endblock %}

{% block body %}

    {% if logs %}
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>{{'admin.crontab_job.log_time'|trans}}</th>
                <th>{{'admin.crontab_job.log_name'|trans}}</th>
                <th>{{'admin.crontab_job.log_resource'|trans}}</th>
                <th>{{'admin.crontab_job.log_status'|trans}}</th>
            </tr>
            </thead>
            <tbody>
            {% for log in logs %}
                {% include 'admin-v2/developer/jobs/log-tr.html.twig' with {log:log} %}
            {% endfor %}
            </tbody>

        </table>
    {% else %}
        <div class="empty">{{'admin.crontab_job.log_empty_hint'|trans}}</div>
    {% endif %}

    {{ web_macro.ajax_paginator(paginator) }}
{% endblock %}

{% block footer %}
    <button type="button" class="btn btn-link" data-dismiss="modal" >{{'form.btn.close'|trans}}</button>
    <script>app.load('topxiaadminbundle/controller/jobs/job-fired-logs-modal');</script>
{% endblock %}